FROM python:3.9

LABEL maintaner="Rafael Peria de Sene - rpsene@br.ibm.com "

RUN apt-get update && apt-get install -y python3-pip && \
pip3 install python-jenkins

ENV JENKINS_URL=""
ENV JENKINS_USER=""
ENV JENKINS_TOKEN=""
ENV JENKINS_JOB_NAME=""
ENV REQUESTOR_EMAIL=""
ENV IBMCLOUD_API_KEY=""
ENV IBMCLOUD_REGION=""
ENV IBMCLOUD_ZONE=""
ENV IBMCLOUD_POWERVS_ID=""
ENV OPENSHIFT_BASTION_IMAGE_NAME=""
ENV OPENSHIFT_RHCOS_IMAGE_NAME=""
ENV OPENSHIFT_PROCESSOR_TYPE=""
ENV OPENSHIFT_SYSTEM_TYPE=""
ENV OPENSHIFT_PRIVATE_NETWORK_NAME=""
ENV OPENSHIFT_CLUSTER_DOMAIN=""
ENV OPENSHIFT_VERSION=""
ENV OPENSHIFT_CLUSTER_FLAVOR=""
ENV RHEL_SUBS_USERNAME=""
ENV RHEL_SUBS_PASSWORD=""
# CLUSTER_ID is used to delete a given cluster.
ENV CLUSTER_ID=""

COPY ./powervs.py /

CMD ["powervs.py"]

ENTRYPOINT ["/usr/local/bin/python3.9"]
